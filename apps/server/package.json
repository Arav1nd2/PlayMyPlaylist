{
  "name": "server",
  "version": "1.0.0",
  "description": "The server for Playmyplaylist",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "@pmp/constants": "*",
    "convict": "^6.2.4",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "morgan": "^1.10.0",
    "winston": "^3.8.2"
  },
  "scripts": {
    "dev": "yarn db:clean-up && yarn server:dev",
    "server:dev": "nodemon src/index.ts",
    "build": "tsc",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "db:up": "docker-compose up -d",
    "db:kill": "docker-compose down",
    "db:clean-up": "rm -rf db-data && yarn db:up"
  },
  "devDependencies": {
    "@mermaid-js/mermaid-cli": "^10.0.2",
    "@types/convict": "^6.1.1",
    "@types/express": "^4.17.17",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.14.1",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "eslint": "^8.35.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.4",
    "prisma": "^4.11.0",
    "prisma-erd-generator": "^1.2.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  }
}
