generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Room {
  id         Int      @id @default(autoincrement())
  code       String   @unique @default(uuid())
  maxPlayers Int
  maxRounds  Int
  maxSongs   Int
  Player     Player[]
  Score      Score[]
}

model Player {
  id     Int     @id @default(autoincrement())
  name   String
  avatar String
  roomId Int?
  room   Room?   @relation(fields: [roomId], references: [id])
  scores Score[]
  songs  Song[]
}

model Song {
  id          Int    @id @default(autoincrement())
  name        String
  thumbnail   String
  songUrl     String
  description String
  playerId    Int
  player      Player @relation(fields: [playerId], references: [id])
}

model Score {
  id       Int    @id @default(autoincrement())
  score    Int
  playerId Int
  roomId   Int
  player   Player @relation(fields: [playerId], references: [id])
  room     Room   @relation(fields: [roomId], references: [id])

  @@index([roomId, playerId])
}
